<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:background="@color/colorline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="63dp"
            android:layout_height="33dp"
            android:textColor="@color/colorgray"
            android:textSize="14dp"
            android:background="@color/colorwhile"
            android:gravity="center"
            android:text="001期"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@color/colorwhile"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="1dp">
            <TextView
                android:id="@+id/result_ball1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/type1_ball_1"
                android:text="01"
                android:textColor="@color/colorwhile"
                android:textSize="10sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/result_ball2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/type1_ball_1"
                android:layout_toRightOf="@+id/result_ball1"
                android:layout_marginLeft="3dp"
                android:text="02"
                android:textColor="@color/colorwhile"
                android:textSize="10sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/result_ball3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/type1_ball_1"
                android:layout_toRightOf="@+id/result_ball2"
                android:layout_marginLeft="3dp"
                android:text="03"
                android:textColor="@color/colorwhile"
                android:textSize="10sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/result_ball4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/type1_ball_1"
                android:layout_toRightOf="@+id/result_ball3"
                android:layout_marginLeft="3dp"
                android:text="04"
                android:textColor="@color/colorwhile"
                android:textSize="10sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/result_ball5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/type1_ball_1"
                android:layout_toRightOf="@+id/result_ball4"
                android:layout_marginLeft="3dp"
                android:text="05"
                android:textColor="@color/colorwhile"
                android:textSize="10sp"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/tenlayout"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:textColor="#fff"
            android:background="@color/colorwhile"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp">
            <TextView
                android:id="@+id/singledouble1"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="单"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="33dp"
                android:background="@color/colorline"
                android:gravity="center"/>
            <TextView
                android:id="@+id/biglittle1"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="大"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/unitlayout"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:background="@color/colorwhile"
            android:layout_marginLeft="1dp"
            android:gravity="center">
            <TextView
                android:id="@+id/singledouble2"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="单"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="33dp"
                android:background="@color/colorline2"
                android:gravity="center"/>
            <TextView
                android:id="@+id/biglittle"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="大"/>
        </LinearLayout>
        <TextView
            android:id="@+id/form_type"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:background="@color/colorwhile"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:textColor="@color/colorgray"
            android:textSize="14dp"
            android:text="组三" />
    </LinearLayout>
</RelativeLayout>